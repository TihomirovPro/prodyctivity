mixin webp(name, typeImg, lazy, alt)
  if lazy == undefined
    picture
      source(srcset="/assets/dist/images/"+name+".webp" type="image/webp")
      source(srcset="/assets/dist/images/"+name+"."+typeImg+"" type="image/"+typeImg+"")
      img(src="/assets/dist/images/"+name+"."+typeImg+"" alt=""+alt+"")
  else
    picture
      source(data-srcset="/assets/dist/images/"+name+".webp" type="image/webp")
      source(data-srcset="/assets/dist/images/"+name+"."+typeImg+"" type="image/"+typeImg+"")
      img(data-src="/assets/dist/images/"+name+"."+typeImg+"" alt=""+alt+"" class=lazy)

